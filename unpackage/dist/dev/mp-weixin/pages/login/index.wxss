.content {
  position: relative;
  width: 100vw;
  height: 100vh;
}
.content .header {
  position: absolute;
  top: 0;
  height: 30vh;
  width: 100%;
  background-image: linear-gradient(90deg, #1b9b66, #2db672);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.content .header .bgIcons {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.content .header .bgIcons .icon1 {
  position: absolute;
  top: -50px;
  left: 50px;
  height: 250px;
  width: 100px;
  background-color: #1cab69;
  border-radius: 999px;
}
.content .header .bgIcons .icon2 {
  position: absolute;
  top: 120px;
  right: 40px;
  height: 120px;
  width: 120px;
  background-color: #39c77f;
  border-radius: 100%;
  box-shadow: 0 0 20px #39c77f;
  opacity: 0.5;
}
.content .header .title {
  display: block;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 30px;
  letter-spacing: 2px;
  z-index: 100;
}
.content .form {
  position: absolute;
  bottom: 0;
  height: 75vh;
  width: 100%;
  background-color: #fff;
  border-radius: 20px 20px 0 0;
  padding: 50px 30px;
  box-sizing: border-box;
}
.content .form .u-form-item__title {
  display: block;
  padding: 20px 0 10px 0;
  box-sizing: border-box;
  color: #1b9b66;
  font-weight: 700;
  font-size: 16px;
  letter-spacing: 2px;
}
.content .form .submitBtn {
  position: absolute;
  bottom: 60px;
  width: 80vw;
  height: 45px;
  border-radius: 999px;
  box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
  background-color: #1b9b66;
  color: #fff;
  line-height: 45px;
  text-align: center;
  font-weight: 700;
  letter-spacing: 2px;
}

